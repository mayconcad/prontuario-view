<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>

		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>

		<message-bundle>ValidationMessages</message-bundle>

		<resource-bundle>
			<base-name>widgets</base-name>
			<var>wd</var>
		</resource-bundle>

		<resource-bundle>
			<base-name>entities</base-name>
			<var>lb</var>
		</resource-bundle>

	</application>
	<converter>
		<converter-id>autocompleteConverter</converter-id>
		<converter-class>br.com.sts.ddum.view.converters.AutocompleteConverter</converter-class>
	</converter>
	<converter>
		<converter-id>unidadeContabilConverter</converter-id>
		<converter-class>br.com.sts.ddum.view.converters.UnidadeContabilConverter</converter-class>
	</converter>
	<converter>
		<converter-id>atividadeContabilConverter</converter-id>
		<converter-class>br.com.sts.ddum.view.converters.AtividadeContabilConverter</converter-class>
	</converter>
	<converter>
		<converter-id>contaContabilConverter</converter-id>
		<converter-class>br.com.sts.ddum.view.converters.ContaContabilConverter</converter-class>
	</converter>
	<converter>
		<converter-id>fonteRecursoConverter</converter-id>
		<converter-class>br.com.sts.ddum.view.converters.FonteRecursoConverter</converter-class>
	</converter>
	<converter>
		<converter-id>responsavelConverter</converter-id>
		<converter-class>br.com.sts.ddum.view.converters.ResponsavelConverter</converter-class>
	</converter>

	<!-- <factory> -->
	<!-- <exception-handler-factory>br.com.sts.ddum.domain.handlers.ServiceExceptionHandlerFactory</exception-handler-factory> -->
	<!-- </factory> -->
	<navigation-rule>
		<navigation-case>
			<from-outcome>sucessoLogin</from-outcome>
			<to-view-id>/pages/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
</faces-config>
